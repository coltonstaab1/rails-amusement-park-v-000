<p id="notice"><%= notice %></p>

<div class="center">
  <div class="pic">
    <img src="http://<%= @attraction.name.gsub(" ", "") %>.jpg.to/" height="250">
  </div>

  <div class="info">
    <p><strong>Name:</strong> <%= @attraction.name %></p>
    <p><strong>Total Number of Users:</strong></p>
    <p><strong>Ticket Requirement:</strong><%= @attraction.tickets %></p>
    <p><strong>Height Requirement:</strong><%= @attraction.min_height %></p>
    <p><strong>Nausea Rating:</strong><%= @attraction.nausea %></p>
    <p><strong>Happiness Rating:</strong><%= @attraction.happiness %></p>
    <% if current_user.admin %>
      <%= link_to 'Edit Attraction', [:edit, @attraction] %></p>
    <% else %>

    <% end %>
    <%= link_to 'Back', attractions_path %>
  </div>
</div>